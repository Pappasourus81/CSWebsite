<script>
(function(){
  // Toggle markscheme panels — each question has its own toggle button
  const toggles = Array.from(document.querySelectorAll('.ms-toggle'));
  toggles.forEach((btn, idx) => {
    const panel = document.getElementById(btn.getAttribute('aria-controls'));
    btn.addEventListener('click', () => {
      const open = panel.classList.contains('ms-open');
      if(open){
        panel.classList.remove('ms-open');
        panel.setAttribute('aria-hidden','true');
        btn.setAttribute('aria-expanded','false');
        btn.textContent = "Show markscheme";
      } else {
        // close others for tidiness
        document.querySelectorAll('.ms-panel.ms-open').forEach(p => { p.classList.remove('ms-open'); p.setAttribute('aria-hidden','true'); });
        document.querySelectorAll('.ms-toggle[aria-expanded="true"]').forEach(b => { b.setAttribute('aria-expanded','false'); b.textContent = "Show markscheme"; });
        panel.classList.add('ms-open');
        panel.setAttribute('aria-hidden','false');
        btn.setAttribute('aria-expanded','true');
        btn.textContent = "Hide markscheme";
        setTimeout(()=> btn.scrollIntoView({behavior:'smooth', block:'center'}), 160);
      }
    });
    // keyboard accessible
    btn.addEventListener('keydown', (e) => { if(e.key === 'Enter' || e.key === ' ') { e.preventDefault(); btn.click(); } });
  });
})();
</script>
</body>
</html>

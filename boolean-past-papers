<script>
  (function(){
    const buttons = Array.from(document.querySelectorAll('.accordion'));
    const panels = Array.from(document.querySelectorAll('.panel'));
    function closeAll(exceptIndex){
      buttons.forEach((btn,i)=>{
        if(i!==exceptIndex){
          btn.setAttribute('aria-expanded','false');
          panels[i].classList.remove('open');
          panels[i].style.maxHeight = null;
        }
      });
    }
    buttons.forEach((btn, idx) => {
      btn.addEventListener('click', () => {
        const expanded = btn.getAttribute('aria-expanded') === 'true';
        if(!expanded){
          closeAll(idx);
          btn.setAttribute('aria-expanded','true');
          panels[idx].classList.add('open');
          panels[idx].style.maxHeight = panels[idx].scrollHeight + 'px';
          setTimeout(()=> btn.scrollIntoView({behavior:'smooth', block:'start'}), 160);
        } else {
          btn.setAttribute('aria-expanded','false');
          panels[idx].classList.remove('open');
          panels[idx].style.maxHeight = null;
        }
      });
      btn.addEventListener('keydown', (e)=>{
        if(e.key === 'Enter' || e.key === ' '){
          e.preventDefault(); btn.click();
        }
      });
    });
    window.addEventListener('load', ()=> {
      buttons.forEach((b,i)=> b.setAttribute('aria-expanded','false'));
      panels.forEach(p=> p.style.maxHeight = null);
    });
  })();
</script>
</body>
</html>
